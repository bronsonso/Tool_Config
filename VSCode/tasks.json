// Git: Add, Commit & Push
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Git: Add, Commit & Push",
      "type": "shell",
      "command": "git add --all && git commit -m \"${input:commitMessage}\" && git push",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      }
    }
  ],
  "inputs": [
    {
      "id": "commitMessage",
      "type": "promptString",
      "description": "Enter commit message:",
      "default": "Update"
    }
  ],
  // Task-specific keybinding
  "keybindings": [
    {
      "key": "ctrl+shift+g p",  // Key combination
      "when": "editorTextFocus" // Optional condition
    }
  ]  
}