// Git: Add, Commit & Push
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Git: Add, Commit & Push",
      "type": "shell",
      "command": "git add . ; if ($?) { git commit -m '${input:commitMessage}' } ; if ($?) { git push -u origin main }",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      }
    }
  ],
  "inputs": [
    {
      "id": "commitMessage",
      "type": "promptString",
      "description": "Enter commit message:",
      "default": "Update"
    }
  ]
}